#page-top {
  background-image: url( <%= asset_path 'background.jpg' %>);
  background-position: top;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100vw;
  height: 85vh;
  position: absolute;
  left: 0px;
  top: 0px;
  background-attachment: fixed;
  border-bottom: solid 1px #121213;
  display: flex;
  justify-content: center;
  align-items: center;
}

#spacer {
  height: 80vh;
}

#page-top-text {
  background-color: rgba(52, 58, 64, 0.5);
  border-radius: 10px;
  color: white;
  margin-left: 10%;
  margin-right: 10%;
  height: fit-content;
  padding: 30px;
  text-align: center;

}

#page-top-text h1 {
  font-size: 3.5em;
  font-weight: bold;
}

#page-top-text h2 {
  font-size: 2em;
  font-style: italic;
}

h4.text-muted {
  font-size: 1em;
  margin-bottom: 20px;
}

.main-content {
  margin: 0 10%;
  line-height: 1.7;
}

.search-panel {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.search-panel .input-group {
  width: 50%;
}

.search-button {
  margin-left: 16px;
  border-radius: 10px;
  border: none;
  font-size: 24px;
}

.form-tag {
  width: 100%;
}

div.checkboxes {
  display: flex;
}

div.checkboxes.center {
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}

div.checkboxes.left {
  justify-content: start;
  align-items: center;
  flex-wrap: wrap;
}

.checkbox-label-pair {
  margin-right: 36px;
}

legend em {
  text-decoration: underline;
}