#page-top {
  background-image: url( <%= asset_path 'background.jpg' %>);
  background-position: top;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100vw;
  height: 85vh;
  position: absolute;
  left: 0px;
  top: 0px;
  background-attachment: fixed;
  border-bottom: solid 1px #121213;
  display: flex;
  justify-content: center;
  align-items: center;
}

#page-top-text {
  background-color: rgba(52, 58, 64, 0.5);
  border-radius: 10px;
  color: white;
  margin-left: 10%;
  margin-right: 10%;
  height: fit-content;
  padding: 30px;
  text-align: center;

}

#page-top-text h1 {
  font-size: 3.5em;
  font-weight: bold;
}

#page-top-text h2 {
  font-size: 2em;
  font-style: italic;
}