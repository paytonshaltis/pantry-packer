#page-top {
  background-image: url( <%= asset_path 'background.jpg' %>);
  background-position: top;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100vw;
  height: 85vh;
  position: absolute;
  left: 0px;
  top: 0px;
  background-attachment: fixed;
  border-bottom: solid 1px #121213;
  display: flex;
  justify-content: center;
  align-items: center;
}

#spacer {
  height: 80vh;
}

#page-top-text {
  background-color: rgba(52, 58, 64, 0.5);
  border-radius: 10px;
  color: white;
  margin-left: 10%;
  margin-right: 10%;
  height: fit-content;
  padding: 30px;
  text-align: center;

}

#page-top-text h1 {
  font-size: 3.5em;
  font-weight: bold;
}

#page-top-text h2 {
  font-size: 2em;
  font-style: italic;
}

h4.text-muted {
  font-size: 1em;
  margin-bottom: 20px;
}

.main-content {
  margin: 0 10%;
  line-height: 1.7;
}

#search-panel {

}

.form-tag {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

#search_text {
  width: 50%;
  height: 2em;
  font-size: 1.5em;
  border-radius: 50px;
  border: 2px solid lightgray;
  padding-left: 20px;
}